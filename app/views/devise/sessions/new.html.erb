<h2>Entrar</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= f.input :email, as: :email, :autofocus => true %>

  <%= f.input :password, as: :password, label: "Senha" %>

  <% if devise_mapping.rememberable? -%>
    <%= f.input :remember_me, as: :boolean, inline_label: 'Lembrar de mim', label: false , label_html: { class: 'checkbox' } %>
  <% end -%>

  <%= f.button :submit, "Entrar" %>
<% end %>

<%= render "devise/shared/links" %>
