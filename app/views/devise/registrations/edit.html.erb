<h2>Editar Usuário</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.input :name, label: "Nome", :autofocus => true  %>
  <%= f.input :email, as: :email, :autofocus => true %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Ainda esperando confirmação de: <%= resource.unconfirmed_email %></div>
  <% end %>

  <%= f.input :password, as: :password, label: "Senha", hint: "(deixe em branco caso NÃO queira mudar sua senha)", :autocomplete => "off" %>
  <%= f.input :password_confirmation, as: :password, label: "Confirmar senha", :autocomplete => "off" %>

  <%= f.input :current_password, as: :password, label: "Senha atual", hint: "(precisamos da sua senha atual para troca-la)", :autocomplete => "off" %>

  <%= f.button :submit, "Atualizar" %>
<% end %>

<h3>Cancelar minha conta</h3>

<p>Não gostou? <%= button_to "Cancelar minha conta", registration_path(resource_name), :data => { :confirm => "Certeza?" }, :method => :delete %></p>

<%= link_to "Voltar", :back %>
